{
  "$schema": "https://json.schemastore.org/package",
  "name": "@repo/api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./orpc/router": {
      "types": "./src/orpc/router.ts",
      "default": "./src/orpc/router.ts"
    },
    "./orpc/contracts": {
      "types": "./src/orpc/router.contract.ts",
      "default": "./src/orpc/router.contract.ts"
    },
    "./orpc/env": {
      "types": "./src/orpc/env.ts",
      "default": "./src/orpc/env.ts"
    }
  },
  "scripts": {
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "type:check": "tsc --noEmit",
    "clean": "git clean -xdf .turbo node_modules dist .cache"
  },
  "dependencies": {
    "@coinbase/cdp-sdk": "^1.44.0",
    "@orpc/contract": "catalog:orpc",
    "@orpc/server": "catalog:orpc",
    "@repo/kv": "workspace:*",
    "@repo/utils": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "dayjs": "catalog:",
    "github-slugger": "^2.0.0",
    "graphql-request": "catalog:",
    "ky": "catalog:",
    "superjson": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@chiastack/tsconfig": "catalog:chiastack",
    "dotenv": "catalog:",
    "typescript": "catalog:"
  }
}
